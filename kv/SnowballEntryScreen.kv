<SnowballEntryScreen>:
	MDBoxLayout:
		
		MDBoxLayout:
			id: infoPage
			padding: 50 
			spacing: 25
			orientation: "vertical"

			MDBoxLayout:
				size_hint: 1, 0.3
				md_bg_color: app.theme_cls.bg_darkest
				padding: 50

				MDTextField:
					id: name
					hint_text: "Name"
					font_size: 40
					text_color: app.theme_cls.text_color

			MDBoxLayout:
				md_bg_color: app.theme_cls.bg_darkest
				padding: 50
				orientation: "vertical"
	
				MDTextField:
					id: description
					hint_text: "Description"
					font_size: 30
					text_color: app.theme_cls.text_color

				MDLabel:
					size_hint: 1, 0.2
					text: "Frequency"
					halign: "center"
					font_style: "H3"
				MDBoxLayout:
					id: buttonRow
					orientation: "vertical"	
					spacing: 50
					padding: 50
					MDFlatButton:
						pos_hint: {"center_x": 0.5, "center_y": 0.5}
						id: b1
						md_bg_color: app.theme_cls.primary_dark
						text: " Daily"
						text_color: 1,1,1,1
						font_size: 30
						
						on_press: root.setFrequency(1)
					MDFlatButton:
						pos_hint: {"center_x": 0.5, "center_y": 0.5}
						id: b2
						md_bg_color: app.theme_cls.primary_dark
						text: "Weekly"
						text_color: 1,1,1,1
						font_size: 30
					
						on_press: root.setFrequency(7)
				MDLabel:
					id: frequency
					halign: "center"
					size_hint: 1, 0.2
					font_style: "H3"

			MDFlatButton:
				pos_hint: {"center_x": 0.5, "center_y": 0.5}
				md_bg_color: app.theme_cls.primary_dark
				text_color: 1,1,1,1
				text: "CREATE"
				font_size: 60
				
				on_press: root.createSnowball()
				
		MDBoxLayout:
			id: displayPage
			md_bg_color: app.theme_cls.primary_color
